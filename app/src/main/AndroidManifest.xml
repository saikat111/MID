<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codingburg.mid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/l"
        android:label="@string/app_name"
        android:roundIcon="@drawable/l"
        android:supportsRtl="true"
        android:theme="@style/Theme.MID">
        <activity android:name=".activity.SplashScreenctivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".activity.TvShowDetailsActivity" />
        <activity android:name=".activity.MovieDetailsActivity" />
        <activity android:name=".activity.TvShowActivity" />
        <activity android:name=".activity.MovieActivity" />
        <activity android:name=".activity.MainActivity"/>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>